{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe build active file",
            "command": "C:\\mingw64\\bin\\gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-IC:\\mingw64\\opt\\include",
                "-g",
                "*.c",
                "Ventanas\\*.c", "Ventanas\\*.o",
                "Ficheros\\*.c", "Ficheros\\*.o",
                "Discos\\*.c",
                "Ordenacion\\*.c", "Ordenacion\\*.o", 
                "Listados\\*.c",
                "Colas\\*.o",
                "Listas\\*.o",
                "Pilas\\*.o",
                "Busqueda\\*.c",
                "Comun\\*.c", "Comun\\*.o",
                "-LC:\\mingw64\\opt\\lib",
                "-lncursesw",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}